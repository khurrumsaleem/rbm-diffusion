<?xml version = '1.0' encoding = 'UTF-8'?>

<rbm>
  <settings>
    <convergence flux_tolerance="1e-6" k_tolerance="1e-7" max_iterations="50000"/>
  </settings>

  <materials>
    <material name="fuel" absorption="0.10" D="2.0" nu_fission="0.11"/>
    <material name="reflector" absorption="0.01" D="1.5" nu_fission="0.0"/>
  </materials>

  <sections>
    <section name="rectangle_1" x0="0.0" y0="0.0" l1="30.0" l2="30.0"/>
    <section name="rectangle_2" x0="0.0" y0="30.0" l1="40.0" l2="10.0"/>
    <section name="rectangle_3" x0="30.0" y0="0.0" l1="10.0" l2="30.0"/>
  </sections>

  <cells>
    <cell name="core" material="fuel">
      <surfaces>rectangle_1</surfaces>
    </cell>
    <cell name="reflector" material="reflector">
      <surfaces>rectangle_2 & rectangle_3</surfaces>
    </cell>
  </cells>

  <rbm>
    <training name="core" parameter="absorption">
      <values>0.05 0.10 0.15</values>
    </training>
    <target num="1">
      <values>0.11</values>
    </target>
  </rbm> 

  <mesh>
    <cartesian_mesh name="square_pin" elements="22500">
      <x section="rectangle_1" bins="75"/>
      <x section="rectangle_3" bins="75"/>
      <y section="rectangle_1" bins="75"/>
      <y section="rectangle_2" bins="75"/>
    </cartesian_mesh>
    <boundary x0="0.0" y0="0.0" x1="0.0" y1="40.0" x2="40.0" y2="0.0"/>
    <left_condition a="0.0" b="1.0"/>
    <right_condition a="1.0" b="-2.0"/>
    <bottom_condition a="0.0" b="1.0"/>
    <top_condition a="1.0" b="-2.0"/>
  </mesh>
</rbm>
